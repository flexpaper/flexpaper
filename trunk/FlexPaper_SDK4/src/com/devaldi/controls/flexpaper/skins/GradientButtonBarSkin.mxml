<?xml version="1.0" encoding="utf-8"?>
<s:Skin name="GradientButtonBarSkin"
        xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:s="library://ns.adobe.com/flex/spark"
        alpha.disabled="0.5">
    <!-- states -->
    <s:states>
        <s:State name="normal" />
        <s:State name="disabled" />
    </s:states>
 
    <fx:Metadata>
    <![CDATA[
        [HostComponent("spark.components.ButtonBar")]
    ]]>
    </fx:Metadata>
 
    <fx:Declarations>
        <fx:Component id="middleButton">
            <s:ButtonBarButton skinClass="com.devaldi.controls.flexpaper.skins.GradientButtonBarButtonSkin" />
        </fx:Component>
    </fx:Declarations>
 
    <s:DataGroup id="dataGroup" width="100%" height="100%">
        <s:layout>
            <s:ButtonBarHorizontalLayout gap="-1"/>
        </s:layout>
    </s:DataGroup>
</s:Skin>
